{
   "$schema": "https://json-schema.org/draft/2020-12/schema",
   "$id": "https://possible-triangle.com/github-metadata-sync-config.schema.json",
   "title": "MetadataConfig",
   "description": "config file for the github metadata sync app",
   "type": "object",
   "properties": {
      "type": {
         "description": "the type of repository this is",
         "enum": [
            "minecraft"
         ]
      }
   },
   "required": [
      "type"
   ],
   "allOf": [
      {
         "if": {
            "properties": {
               "type": {
                  "const": "minecraft"
               }
            }
         },
         "then": {
            "properties": {
               "loaders": {
                  "description": "the mod loader this mod supports",
                  "type": "array",
                  "uniqueItems": true,
                  "items": {
                     "type": "string"
                  }
               },
               "versions": {
                  "description": "the minecraft versions this mod supports",
                  "type": "array",
                  "uniqueItems": true,
                  "items": {
                     "type": "string"
                  }
               }
            }
         }
      }
   ]
}