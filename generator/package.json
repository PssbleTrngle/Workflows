{
  "name": "@pssbletrngle/github-meta-generator",
  "type": "module",
  "module": "src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "check-types": "tsc --noEmit",
    "build": "bun run gen:meta && bun run gen:templates",
    "gen:meta": "bun run scripts/meta.ts",
    "gen:templates": "bun run scripts/templates.ts",
    "lint": "eslint {src,scripts}",
    "format": "biome format --write src",
    "test": "bun test",
    "cli": "bun run src/cli.ts"
  },
  "dependencies": {
    "@types/bun": "latest",
    "handlebars": "^4.7.8",
    "prettier": "^3.6.2",
    "yaml": "^2.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@pssbletrngle/webhooks-configs": "workspace:*"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}