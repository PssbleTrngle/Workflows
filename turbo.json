{
   "$schema": "https://turborepo.com/schema.json",
   "tasks": {
      "build": {
         "dependsOn": [
            "^build"
         ],
         "outputs": [
            "dist/**"
         ]
      },
      "check-types": {
         "dependsOn": [
            "^check-types"
         ]
      },
      "lint": {
         "dependsOn": [
            "^lint"
         ]
      },
      "format": {
         "dependsOn": [
            "^format"
         ]
      },
      "test": {
         "dependsOn": [
            "^test"
         ]
      },
      "dev": {
         "persistent": true,
         "cache": false
      }
   }
}